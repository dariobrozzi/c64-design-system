{
  "name": "@dariobrozzi/c64-design-system",
  "description": "A vintage Design System inspired on Commodore interface",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dariobrozzi/c64-design-system.git"
  },
  "author": "Dario Brozzi and Contributors",
  "license": "MIT",
  "keywords": [
    "design-system",
    "c64",
    "commodore",
    "vintage",
    "react"
  ],
  "type": "module",
  "main": "dist/c64-design-system.js",
  "types": "dist/c64-design-system.d.ts",
  "files": [
    "dist",
    "dist/style-dictionary",
    "dist/fonts.css",
    "dist/assets"
  ],
  "scripts": {
    "build": "npm run build:tokens && tsc -b && vite build && npm run copy:assets",
    "build:tokens": "style-dictionary build --config style-dictionary/sd.config.js",
    "copy:assets": "cp -R src/assets dist/assets && cp src/fonts.css dist/fonts.css && cp -R src/generated/style-dictionary dist/style-dictionary",
    "lint": "eslint .",
    "doc": "cd doc && npm run dev"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "style-dictionary": "^5.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4"
  }
}